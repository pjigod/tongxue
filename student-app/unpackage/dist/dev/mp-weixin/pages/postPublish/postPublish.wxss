
.smalltemp {
	display: flex;
	width: 100%;
	height: 1rpx;
	background-color: #636263;
}
.container {
	display: flex;
	width: 100%;
	flex-wrap: wrap;
}
.publish {
	display: flex;
	width: 100%;
	height: 100rpx;
	flex-wrap: wrap;
}
.temp1 {
	display: flex;
	width: 15%;
}
.publish-text {
	display: flex;
	width: 70%;
	justify-content: center;
	align-items: center;
}
.publish-button {
	display: flex;
	width: 15%;
	justify-content: center;
	align-items: center;
}
.postpicker {
	display: flex;
	width: 100%;
	height: 100rpx;
	justify-content: space-between;
}
.picker-image {
	display: flex;
	width: 10%;
	height: 100%;
	justify-content: center;
	align-items: center;
}
.next {
	display: flex;
	width: 10%;
	height: 100%;
	margin-left: auto;
	justify-content: center;
	align-items: center;
}
.picker {
	width: 80%;
	display: flex;
	height: 100%;

	align-items: center;
}
.postTitle {
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
}
.postBrief {
	width: 100%;
	height: 300rpx;
}
.postCover {
	display: flex;
	flex-wrap: wrap;
	width: 100%;
	justify-content: center;
	align-items: center;
}

